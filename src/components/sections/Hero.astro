---
import { Icon } from "astro-icon/components";
import FormButton from "../buttons/FormButton.astro";
import { t } from "i18next";

---
<div class="relative flex h-[90vh] bg-true-blue ">
    <!-- Sección de contenido -->
    <div class="flex flex-col justify-center px-8 space-y-6 text-white lg:w-1/2">
      <h1 class="text-4xl font-hero lg:text-5xl uppercase">
        {t("nav.msg")}
      </h1>
      <p class="text-lg lg:text-xl capitalize">
        {t("nav.sub")}
      </p>
        <FormButton />
    </div>
  
    <!-- Sección de imagen con clip diagonal -->
    <div class="hidden md:flex relative w-full lg:w-1/2">
           
      <div class="absolute inset-0 bg-cover bg-center" 
        style="background-image: url('/hero.svg');">
        <div class="flex gap-1 items-center absolute bottom-2 right-2 bg-rich-black bg-opacity-75 text-white text-xs px-2 py-1 rounded-lg">
          <Icon name="location" class="text-red-600" />
          <p class="font-body capitalize">Bukit Merah, Singapore</p>
        </div>
      </div>
      
    </div>
  </div>
  