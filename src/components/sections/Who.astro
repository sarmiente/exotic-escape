---
// @ts-nocheck
import { t } from "i18next";
import { localizePath } from "astro-i18next";
---
<section class="bg-white dark:bg-gray-900 flex justify-center items-center min-h-screen">
    <div class="px-6 py-16 mx-auto">
        <div class="items-center lg:flex lg:justify-center">
            <div class="w-full lg:w-1/3">
                <div class="lg:max-w-lg space-y-6">
                    <p class="uppercase font-body text-center lg:text-left">
                        {t("nav.who-we-are")}
                    </p>
                    <h1 class="text-3xl font-hero text-oxford-blue dark:text-white lg:text-4xl text-center lg:text-left">
                        {t("who.title")}
                        <br> 
                        <span class="text-true-blue">
                            {t("who.span")}
                        </span>
                    </h1>
                    
                    <p class="font-body mt-3 text-gray-600 dark:text-gray-400 text-center lg:text-left">
                        {t("who.subtitle")}
                    </p>
                    
                    <div class="flex justify-center lg:justify-start">
                        <a href={localizePath("/nosotros")}>
                        <button class="font-body px-5 py-2 mt-6 text-sm tracking-wider text-white uppercase transition-colors duration-300 transform bg-true-blue rounded-lg lg:w-auto hover:bg-oxford-blue focus:outline-none focus:bg-true-blue hover:scale-105">
                            {t("nav.more")}
                        </button>
                    </a>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-center w-full mt-6 lg:mt-0 lg:w-1/2 lg:justify-end">
                <img class="size-2/3 rounded-lg lg:max-w-3xl" src="https://images.unsplash.com/photo-1600880292089-90a7e086ee0c?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagen de Quienes somos">
            </div>
        </div>
    </div>
</section>
