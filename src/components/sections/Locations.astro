---
import { t } from "i18next";
---
<section class="bg-true-blue dark:bg-gray-900 flex justify-center items-center min-h-screen pt-12">
  <div class="px-6 py-16 mx-auto space-y-10">
    <!-- Encabezado -->
    <div class="space-y-4 text-center text-white">
      <p class="uppercase font-body">{t("location.title")}</p>
      <h1 class="text-3xl font-hero lg:text-4xl">{t("location.subtitle")}</h1>
    </div>

    <!-- Bloque 1: Bogotá -->
    <div class="flex flex-col gap-10 lg:flex-row items-center lg:justify-center space-y-4 lg:space-y-0 lg:space-x-8">
      <div class="w-full lg:w-1/3 order-1 lg:order-2 space-y-6 text-center lg:text-left">
        <h1 class="text-3xl font-hero text-white lg:text-4xl">Bogotá</h1>
        <p class="font-body font-light text-white">{t("location.msg-two")}</p>
      </div>
      <div class="w-full lg:w-1/3 order-2 lg:order-1">
        <img
          class="w-full h-auto rounded-full object-cover"
          src="https://images.unsplash.com/photo-1568632234157-ce7aecd03d0d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Bogotá - Ciudad vibrante y cultural"
        />
      </div>
    </div>

    <!-- Bloque 2: Cartagena de Indias -->
    <div class="flex flex-col lg:flex-row-reverse items-center lg:justify-center space-y-4 lg:space-y-0 lg:space-x-8">
      <div class="w-full lg:w-1/3 order-1 lg:order-2 space-y-6 text-center lg:text-left">
        <h1 class="text-3xl font-hero text-white lg:text-4xl">Cartagena de Indias</h1>
        <p class="font-body font-light text-white">{t("location.msg-one")}</p>
      </div>
      <div class="w-full lg:w-1/3 order-2 lg:order-1">
        <img
          class="w-full h-auto rounded-full object-cover"
          src="https://images.unsplash.com/photo-1651421479936-e24edc3e3143?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Cartagena de Indias - Ciudad amurallada con historia"
        />
      </div>
    </div>

    <!-- Bloque 3: Buenaventura -->
    <div class="flex flex-col gap-10 lg:flex-row items-center lg:justify-center space-y-4 lg:space-y-0 lg:space-x-8">
      <div class="w-full lg:w-1/3 order-1 lg:order-2 space-y-6 text-center lg:text-left">
        <h1 class="text-3xl font-hero text-white lg:text-4xl">Buenaventura</h1>
        <p class="font-body font-light text-white">{t("location.msg-three")}</p>
      </div>
      <div class="w-full lg:w-1/3 order-2 lg:order-1">
        <img
          class="w-full h-auto rounded-full object-cover"
          src="https://upload.wikimedia.org/wikipedia/commons/6/63/Sociedad_portuaria_regional_de_buenaventura.jpg"
          alt="Buenaventura - Puerto principal del Pacífico colombiano"
        />
      </div>
    </div>
  </div>
</section>