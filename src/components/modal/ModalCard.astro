---
import ModalForm from "../../components/modal/ModalForm.astro";
import { t } from "i18next";

const services = [
  {
    title: t("nav.inter"),
    subtitle: t("services.sub-one"),
    image: "/src/assets/puerto_contenedores.jpg",
    content: t("services.one")
  },
  {
    title: t("nav.docs"),
    subtitle: t("services.sub-two"),
    image: "/src/assets/puerto_contenedores.jpg",
    content: t("services.two")
  },
  {
    title: t("nav.distr"),
    subtitle: t("services.sub-one"),
    image: "/src/assets/puerto_contenedores.jpg",
    content: t("services.three")
  },
  {
    title: t("nav.cons"),
    subtitle: t("services.sub-one"),
    image: "/src/assets/puerto_contenedores.jpg",
    content: t("services.four")
  },
  {
    title: t("nav.sure"),
    subtitle: t("services.sub-one"),
    image: "/src/assets/puerto_contenedores.jpg",
    content: t("services.five")
  },
  {
    title: t("nav.per"),
    subtitle: t("services.sub-one"),
    image: "/src/assets/puerto_contenedores.jpg",
    content: t("services.six")
  },
];
---


    <!-- Modal Card -->
    <div x-data="{modalIsOpen: false}">
        <ul class="grid gap-12 max-w-6xl mx-auto px-4 sm:grid-cols-2 lg:grid-cols-3 py-12"
      >
        {services.map((service) => (
          <li class="group relative block bg-rich-black rounded-xl overflow-hidden">
            <img
              alt="Fotos de servicios de transporte nautico"
              src={service.image}
              class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"
            />
  
            <div class="relative p-6 lg:p-8">
              <p class="text-xs font-medium uppercase tracking-widest text-oxford-blue">
                {service.subtitle}
              </p>
  
              <p class="text-xl font-hero text-white sm:text-2xl">
                {service.title}
              </p>
  
              
            </div>
            <div class="mt-24 p-4 lg:p-8" >
                <div class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100 space-y-2">
                  <p class="text-sm font-body text-white">{service.content}a</p>
                  <button x-on:click="modalIsOpen = true" type="button" class="cursor-pointer whitespace-nowrap rounded-md bg-true-blue px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:bg-white dark:text-black dark:focus-visible:outline-white">{t("nav.btn")}</button>
                </div>
              </div>
          </li>
        ))}
      </ul>
  
      
      <div x-cloak x-show="modalIsOpen" x-transition.opacity.duration.200ms x-trap.inert.noscroll="modalIsOpen" @keydown.esc.window="modalIsOpen = false" @click.self="modalIsOpen = false" class="fixed inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-md sm:items-center lg:p-8" role="dialog" aria-modal="true" aria-labelledby="defaultModalTitle">
  
  
        
        <!-- Modal Dialog -->
        <div x-show="modalIsOpen" x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity" x-transition:enter-start="opacity-0 scale-50" x-transition:enter-end="opacity-100 scale-100" class="flex mx- flex-col gap-4 overflow-hidden rounded-md border border-neutral-300 bg-white text-neutral-600 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300">
  
  
          
            <!-- Dialog Header -->
            <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4 dark:border-neutral-700 dark:bg-neutral-950/20">
                <h3 id="defaultModalTitle" class="font-semibold tracking-wide text-neutral-900 dark:text-white">{t("contact.title")}</h3>
                <button @click="modalIsOpen = false" aria-label="close modal">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" stroke="currentColor" fill="none" stroke-width="1.4" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <!-- Dialog Body -->
           
              <ModalForm />
            
            <!-- Dialog Footer -->
            <div class="flex flex-col-reverse justify-between gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4 dark:border-neutral-700 dark:bg-neutral-950/20 sm:flex-row sm:items-center md:justify-end">
                <button @click="modalIsOpen = false" type="button" class="cursor-pointer whitespace-nowrap rounded-md px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-600 transition hover:opacity-75 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white">{t("cta.cnl")}</button>
                
            </div>
        </div>
    </div>
  
       </div>