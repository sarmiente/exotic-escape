---
// @ts-nocheck
import { changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import {t} from "i18next";
import { localizePath } from "astro-i18next";
changeLanguage("en");
---


<Layout title={t("cta.title")}>
    <section class="text-gray-600 body-font relative">
        <div class="container px-5 py-24 mx-auto flex sm:flex-nowrap flex-wrap">
          <div class="lg:w-2/3 md:w-1/2 bg-gray-300 rounded-lg overflow-hidden sm:mr-10 p-10 flex items-end justify-start relative">
            
            <iframe width="100%" height="100%" title="map" class="absolute inset-0"  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d19922.063987706842!2d-75.51479990385067!3d10.373900736529386!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8ef62f98d6f1a513%3A0x59187853f3369fb8!2sBloc%20Port%20Centro%20Empresarial%20y%20Log%C3%ADstico!5e0!3m2!1sen!2sco!4v1737130066819!5m2!1sen!2sco"  style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

            <div class="bg-white relative flex flex-wrap py-6 rounded shadow-md">
              <div class="lg:w-1/2 px-6">
                <h2 class="font-body font-semibold text-gray-900 tracking-widest text-xs">{t("cta.address")}</h2>
                <p class="mt-1 font-body text-sm uppercase">
                    Cra. 56 #7c-39, Bellavista, Cartagena de Indias
                </p>
              </div>
              
              <div class="lg:w-1/2 px-6 mt-4 lg:mt-0">
                <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs">{t("cta.mail")}</h2>
                <a target="_blank" href="mailto:pricing@wesell.com.co" class="text-true-blue leading-relaxed">pricing@wesell.com.co</a>
                <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs mt-4">{t("cta.phone")}</h2>
                <a target="_blank" class="leading-relaxed font-body text-sm" href="https://api.whatsapp.com/send/?phone=573112752765&text=Hola%2C%20estoy%20interesado%20en%20sus%20servicios">
                   +57 314 309 7683
                  </a>
              </div>
            </div>
          </div>


          <div class="lg:w-1/3 md:w-1/2 bg-white flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">
            <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">{t("cta.leave")}</h2>
           
            <div class="relative mb-4">
              <label for="name" class="leading-7 text-sm text-gray-600">{t("cta.name")}</label>
              <input type="text" id="name" name="name" class="w-full bg-white rounded border border-gray-300 focus:border-true-blue focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
              <label for="email" class="leading-7 text-sm text-gray-600">{t("cta.mail")}</label>
              <input type="email" id="email" name="email" class="w-full bg-white rounded border border-gray-300 focus:border-true-blue focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
              <label for="message" class="leading-7 text-sm text-gray-600">{t("cta.msg")}</label>
              <textarea id="message" name="message" class="w-full bg-white rounded border border-gray-300 focus:border-true-blue focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
            </div>
            <button class="text-white bg-true-blue border-0 py-2 px-6 focus:outline-none hover:bg-oxford-blue rounded text-lg">{t("cta.btn")}</button>
            <div class="flex items-center mt-3 text-sm">
                <p class="mr-1">{t("cta.privacy")}
                    <a href={localizePath("/politica-de-privacidad")}>{t("cta.link")}</a>
                </p>
                
            </div>
          </div>
        </div>
      </section>

</Layout>